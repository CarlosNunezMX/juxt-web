<html>
<head>
    <link rel="stylesheet" type="text/css" href="<%= cdnURL %>/css/juxt.css">
    <script src="<%= cdnURL %>/js/pjax.min.js"></script>
    <script src="<%= cdnURL %>/js/juxt.js"></script>
</head>
<body>
<%- await include('nav_bar', { selection: 4 }); %>
<div id="main">
    <h1 id="title" class="page-header"><%= lang.global.notifications %></h1>
    <%- await include('scroll_wrapper', { text: lang.global.notifications, lang: lang }); %>
    <div class="community-page-posts-wrapper">
        <table cellspacing="0">
            <tbody id="messages-list">
            <% if(notifications.length === 0) {%>
                <p class="no-posts-text"><%= lang.notifications.none %></p>
            <%} else { %>
                <% for(let i = notifications.length - 1; i >= 0; i--) { %>
                    <% var title; if(notifications[i].title.indexOf('NEW_FOLLOWER') !== -1) title = notifications[i].title.replace('NEW_FOLLOWER', lang.notifications.new_follower); else title = notifications[i].title %>
                    <tr class="message-wrapper" data-pjax="<%=notifications[i].link%>">
                        <%if(notifications[i].type === 0) { %>
                            <tr <%if(!notifications[i].read) {%>class="unread"<%}%>>
                                <td class="messages-list-wrapper <% if(i === notifications.length - 1) { %>top<%}%>">
                                    <h3><%=title%></h3>
                                    <h4><%=notifications[i].content%></h4>
                                </td>
                            </tr>
                        <%} else if(notifications[i].type === 1) {%>
                        <tr <%if(!notifications[i].read) {%>class="unread"<%}%>>
                            <td class="messages-list-wrapper <% if(i === notifications.length - 1) { %>top<%}%>">
                                <h3><%=title%></h3>
                                <h4><%=notifications[i].content%></h4>
                            </td>
                        </tr>
                        <%} else if(notifications[i].type === 2) {%>
                            <%let userContent = await database.getUserContent(notifications[i].reference_id);
                              let userProfile = await database.getPNID(notifications[i].reference_id);
                            %>
                            <td class="messages-list-wrapper <% if(i === notifications.length - 1) { %>top<%}%>">
                                <div>
                                    <%if(pnid.access_level >= 2) {%>
                                        <img class="community-page-info-icon verified" src="http://mii.olv.pretendo.cc/mii//<%= userContent.pid %>/normal_face.png">
                                        <h2 class="user-page-title verified-badge"><%= pnid.mii.name %></h2>
                                    <%} else {%>
                                        <img class="community-page-info-icon" src="http://mii.olv.pretendo.cc/mii//<%= userContent.pid %>/normal_face.png">
                                        <h2 class="user-page-title"><%= pnid.mii.name %></h2>
                                    <%}%>
                                </div>
                            </td>
                        <%} else {%>
                            <td class="messages-unread-badge-wrapper <% if(i === notifications.length - 1) { %>top<%}%>">
                                <%if(!notifications[i].read) {%><div class="unread-badge"></div><%}%>
                            </td>
                            <td class="messages-list-wrapper <% if(i === notifications.length - 1) { %>top<%}%>">
                                <h3 class="notifications-list-content"><%= title %><span style="color: rgba(113,141,148,1)"> - <%= moment(notifications[i].created_at).fromNow() %></span></h3>
                            </td>
                        <%}%>
                    </tr>
                <%}%>
            <%}%>
            </tbody>
        </table>
    </div>
    <img src="" onerror="wiiuBrowser.showLoadingIcon(!1);window.scroll(0, 0);">
</div>
<body onload="stopLoading();wiiuBrowser.lockUserOperation(false);">
</body>
</html>
